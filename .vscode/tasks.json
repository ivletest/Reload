{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "cmake-debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug ..",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "cmake-release",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release ..",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}